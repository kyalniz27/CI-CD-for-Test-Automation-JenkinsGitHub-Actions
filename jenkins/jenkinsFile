pipeline {
    agent any

    stages {
        stage('Unit Tests - Backend') {
            agent {
                docker {
                    image 'snakee/golang-junit:1.21'
                    reuseNode true
                }
            }
            environment {
                GOCACHE = "${WORKSPACE}/.gocache"
                GOPATH = "${WORKSPACE}/go"
            }
            steps {
                echo 'Running unit tests for the backend...'
                // Add your backend unit test commands here
                dir('bugtracker-backend') {
                    sh 'go test ./... -v'
                }
            }
        }

        stage('Unit Tests - Frontend') {
            agent {
                docker {
                    image 'node:18'
                    reuseNode true
                }
            }
            environment {
                NODE_ENV = 'test'
            }
            steps {
                echo 'Running unit tests for the frontend...'
                // Add your frontend unit test commands here
                dir('bugtracker-frontend') {
                    sh 'npm install'
                    sh 'npm test'
                }
            }

            post {
                always {
                    echo 'Collecting test results...'
                    junit 'bugtracker-frontend/test-results.xml'
                }

            }
    }
}
}